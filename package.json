{
  "name": "qing-brother",
  "private": true,
  "version": "1.0.0",
  "description": "战国·与伍同行 (Warring States: With the Five) - A hardcore tactical squad RPG set in the Warring States period",
  "type": "module",
  "main": "electron/main.js",
  "author": "QingBrother Studio",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "vite build && electron-builder --win",
    "electron:build:dir": "vite build && electron-builder --win --dir",
    "pack:win": "vite build && electron-builder --win --x64"
  },
  "dependencies": {
    "react-dom": "^19.2.4",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.qingbrother.warring-states",
    "productName": "战国与伍同行",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "extraResources": [],
    "asar": false
  }
}
