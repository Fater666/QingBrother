{
  "name": "qing-brother",
  "private": true,
  "version": "1.0.0",
  "description": "鎴樺浗路涓庝紞鍚岃 (Warring States: With the Five) - A hardcore tactical squad RPG set in the Warring States period",
  "type": "module",
  "main": "electron/main.js",
  "author": "QingBrother Studio",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "android:package": "powershell -ExecutionPolicy Bypass -File .\\scripts\\package-android.ps1",
    "preview": "vite preview",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "vite build && electron-builder --win",
    "electron:build:dir": "vite build && electron-builder --win --dir",
    "pack:win": "vite build && electron-builder --win --x64"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.qingbrother.warring-states",
    "productName": "鎴樺浗涓庝紞鍚岃",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "build/icon.png"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "extraResources": [],
    "asar": false
  }
}
